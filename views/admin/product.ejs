<html>
<head>
    <meta charset="UTF-8">
    <title>Add new product</title>
</head>
<body>
    <div>
        <h2>Page create new product</h2><br>
    </div>
    <div>
            <% if (errors) { %>
                <% for(var i=0; i<errors.length; i++) {%>
                <div class="alert alert-danger col-sm-12"><%= errors[i].msg %></div>
                <% } %>
            <% } %>
    </div><br>
    <div>
        <form action="/admin/product/add" method="POST">
            <div>
                <input type="text" name="id" hidden="true" >
            </div>
            <div>
                <label for="title">Title:</label><br>
                <input type="text" name="title" required>
            </div><br>
            <div>
                <label for="price">Price:</label><br>
                <input type="number" name="price" placeholder="enter number" required>
            </div><br>
            <div>
                <label for="description">Description:</label><br>
                <textarea style="width:500px;height:100px;" name="description" required></textarea>
            </div>
            <div>
                <button>SAVE NEW PRODUCT _</button>
            </div>
        </form>
    </div>
</body>
</html>
